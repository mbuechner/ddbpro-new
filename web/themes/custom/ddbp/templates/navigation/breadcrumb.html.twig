<div class="breadcrumbs-container">
  {% if breadcrumb %}
    <nav class="menu menu--breadcrumbs" role="navigation" aria-labelledby="system-breadcrumb">
      <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb' | t }}</h2>
      <ul class="breadcrumbs">
        {% for key, item in breadcrumb %}
          <li class="breadcrumbs__item">
            {% if item.url %}
              <a class="breadcrumbs__item-link" href="{{ item.url }}">
                {% if key == 0 %}
                  <span class="visually-hidden">{{ item.text }}</span>
                  <i class="fa-solid fa-house"></i>
                {% else %}
                  <i class="fa-solid fa-chevron-right"></i>
                  {{ item.text }}
                {% endif %}
              </a>
            {% else %}
              <i class="fa-solid fa-chevron-right"></i>
              {{ item.text }}
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}

  {% include '@ddbp/partials/stable-link.html.twig' %}
</div>
